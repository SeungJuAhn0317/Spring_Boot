package com.ggoreb.hospital.controller;

import java.util.HashMap;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;

import com.ggoreb.hospital.repository.EmpRepository;

@Controller
public class HomeController {
	@Autowired
	EmpRepository e;
	
	@GetMapping("/emp")
	@ResponseBody
	public String emp() {
		return e.findAll();
	}
	
	@GetMapping("/json")
	@ResponseBody
	public Map<String, String> json(@RequestParam("area") String area) {
		Map<String, String> map = new HashMap<>();
		map.put("area", area);
		return "dddd";
	}
	
	@GetMapping("/html")
	public String html(@RequestParam("area") String area, Model model) {
		model.addAttribute("area", area);
		return "home";
	}
}
